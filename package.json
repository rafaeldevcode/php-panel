      "resolve-url-loader": "^5.0.0",
      "sass": "^1.52.3",
      "sass-loader": "^12.1.0",
      "tailwindcss": "^3.3.3",
      "webpack": "^5.73.0",
      "webpack-cli": "^4.10.0"
  },
  "dependencies": {
